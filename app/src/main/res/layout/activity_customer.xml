<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0de3ff"
    android:padding="10dp"
    tools:context="com.easypay.easypay.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Customer"
        android:gravity="center"
        android:textSize="20dp"
        android:id="@+id/nama_customer"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/saldo_customer"
        android:text="Rp 1.000.0000"
        android:textSize="32dp"
        android:gravity="center"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <TableRow>
            <Button
                android:id="@+id/topup_button"
                android:drawableTop="@drawable/logoclock"
                android:background="#0de3ff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:text="Topup"/>

            <Button
                android:id="@+id/customer_transaction_button"
                android:drawableTop="@drawable/logoclock"
                android:background="#0de3ff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:text="Transaction"/>
            </TableRow>

        <TableRow>
            <Button
                android:id="@+id/customer_history_button"
                android:drawableTop="@drawable/logoclock"
                android:background="#0de3ff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:text="History"/>

            <Button
                android:id="@+id/change_password_button"
                android:drawableTop="@drawable/logoclock"
                android:background="#0de3ff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:text="Change Password"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/signout_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="sign out" />
</LinearLayout>
